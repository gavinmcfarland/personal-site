<Layout>
	<@title>Thoughts</@title>
	<@body>
		<h1 style="font-size: var(--font-size-h2)">Thoughts</h1>
		<ul>
			<for|post, index| of=input.posts>
				<li class="text-crop-none" style="display: inline;">
					<h3>
						<a href=post.url>${post.title}</a>
					</h3>
				</li>
			</for>
		</ul>
	</@body>
</Layout>
