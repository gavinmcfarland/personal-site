import markdown from '../scripts/markdown'

<Layout class="page__cv">
	<@title>CV</@title>
	<@body>
		<for|heading, content| in=input.sections>
			<Section>
				<h2>${heading}</h2>
				<div>$!{markdown(content)}</div>
			</Section>
		</for>
		<Section>${input.contents}</Section>
	</@body>
</Layout>
style {
	@import "../styles";

	.page__cv {
		& h2 {
			@extend .f-caps, .f-1, .md\:w-200;
		}
		& section {
			@extend .md\:flex;
		}
	}

	.page__cv table th {
		display: none;
	}
}
