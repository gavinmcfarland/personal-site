{
	"version": 2,
	"github": {
		"silent": true
	},
	"builds": [{
		"src": "dist/client/**",
		"use": "@now/static"
	}, {
		"src": "dist/server/main.js",
		"use": "@now/node",
		"config": {
			"includeFiles": [
				"content/**"
			]
		}
	}],
	"alias": ["www.gavinmcfarland.co.uk"],
	"routes": [{
			"src": "/static/(.*)",
			"dest": "dist/client/$1",
			"methods": ["GET"]
		},
		{
			"src": "/(.*)",
			"dest": "dist/server/main.js",
			"methods": ["GET"]
		},
		{
			"src": "/(.*)",
			"status": 301,
			"headers": { "Location": "https://gavinmcfarland.co.uk/$1" }
		}
	]
}
